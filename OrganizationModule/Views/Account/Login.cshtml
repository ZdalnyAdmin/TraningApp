<div class="login-container">
    <div class="login-message"></div>
    <div class="form" ng-form="loginFrm" ng-submit="login()">
        <div class="login-form-row"><label>Login:</label><input type="text" ng-model="emailAddress" required /></div>
        <div class="login-form-row"><label>Password:</label><input type="text" ng-model="password" required /></div>
        <button id="login" ng-disabled="loginFrm.$invalid">Login</button>
    </div>
</div>
