            <strong>{{ Statistic.StartedTrainings }}</strong>
        </div>
        <div class="col-lg-4 col-xs-6 blue-labels">
            <label>W TYM ZAKOŃCZONYCH</label>
            <strong>{{ Statistic.CompletedTrainings }}</strong>
        </div>
    </div>
    <div class="display-table">
        <div class="display-table-header-group">
            <div class="display-table-row blue-labels">
                <div>SZKOLENIE</div>
                <div>URUCHOMIEŃ</div>
            </div>
        </div>
        <div class="display-table-row-group">
            <div class="display-table-row" ng-repeat="item in Trainings">
                <div>{{item.Name}}</div>
                <div>{{item.RunTrainingStats}}</div>
            </div>
        </div>
    </div>
</div>

