<div id="statistic" ng-app="" ng-controller="adminStatisticsController">

    @*<strong class="error">{{ success }}</strong>*@
    
    <h3>UŻYTKOWNICY</h3>

    <div class="statistic-row row">
        <div class="col-lg-4 col-xs-6 green-labels">
            <label>LICZBA OSÓB W ORGANIZACJI</label>
            <strong>{{ Statistic.People }}</strong>
        </div>
        <div class="col-lg-4 col-xs-6 green-labels">
            <label>W TYM AKTYWNYCH</label>
            <strong>{{ Statistic.ActivePeople }}</strong>
        </div>
        <div class="col-lg-4 col-xs-6 purple-labels">
            <label>ZABLOKOWANYCH</label>
            <strong>{{ Statistic.BlockedPeople }}</strong>
        </div>
        <div class="col-lg-4 col-xs-6 purple-labels">
            <label>KONT USUNIĘTYCH</label>
            <strong>{{ Statistic.DeleteAccount }}</strong>
        </div>
        <div class="col-lg-4 col-xs-6 green-labels">
            <label>AKTYWNYCH W OSTATNICH 7 DNIACH</label>
            <strong>{{ Statistic.WeekActiveUser }}</strong>
        </div>
        <div class="col-lg-4 col-xs-6 green-labels">
            <label>AKTYWNYCH W OSTATNICH 30 DNIACH</label>
            <strong>{{ Statistic.MonthActiveUser }}</strong>
