

<strong class="error">{{ viewModel.ErrorMessage }}</strong>

<div>
    <div id="simpleRow" ng-click="showTab(1)">
        WEWNETRZNE
    </div>

    <div id="simpleRow" ng-click="showTab(2)" ng-show="viewModel.ShowExternal">
        OD KENPRO
    </div>

    <div ng-repeat="item in viewModel.InternalTrainings" ng-show="index  == 1">
        <div id="simpleRow">
            <div id="mainText">
                {{ item.Name }}
            </div>
            <div id="mainText">
                {{ item.CreateUserName }}
            </div>
            <div id="mainText">
                <div ng-repeat="group in item.AssignedGroups">
                    {{ group.Name }} ,
                </div>
                <div id="mainText" ng-show="{{ item.IsActive }}">
                    dostepny
                </div>
                <div id="mainText" ng-hide="{{ item.IsActive }}">
                    zablokowany
                </div>
                <div id="inputButto" ng-click="showLogs(item)" ng-hide="item.showLog">
                    POKAZ LOGI EDYCJI
                </div>
                <div id="inputButto" ng-click="hideLogs(item)" ng-show="item.showLog">
                    UKRYJ LOGI EDYCJI
                </div>
                <div id="inputButto" ng-click="changeStatus(item)" ng-show="{{ item.IsActive }}">
                    ZABLOKUJ
                </div>
                <div id="inputButto" ng-click="changeStatus(item)" ng-hide="{{ item.IsActive }}">
                    ODBLOKUJ
                </div>
            </div>
            <div id="simpleRow" ng-show="item.showLog">
                <div ng-repeat="log in item.Logs">
                    <div id="simpleRow">
                        <div id="mainText">
                            {{ log.Date | date: 'dd.MM.yyyy hh.mm' }}
                        </div>
                        <div id="mainText">
                            {{ log.Name }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div ng-repeat="item in viewModel.ExternalTrainings" ng-show="index  == 2">
            <div id="simpleRow">
                <div id="mainText">
                    {{ item.Name }}
                </div>
            </div>
            <div id="simpleRow">
                <div id="mainText">
                    Dostepne dla : 
                    <div ng-repeat="group in item.AssignedGroups">
                        <input type="checkbox" ng-model="item.selected" />{{group.Name}}
                    </div>

                </div>
                <div id="inputButto" ng-click="showEdit = ! showEdit" ng-show="!showEdit">
                    EDYTUJ
                </div>
            </div>
            <div id="simpleRow" ng-show="showEdit">
                <div ng-repeat="item in Groups">
                    <input type="checkbox" ng-model="item.selected" />{{item.Name}}
                </div>
                <div id="inputButto" ng-click="edit(item)" ng-show="showEdit">
                    ZAPISZ ZMIANY
                </div>
            </div>
        </div>
    </div>
</div>


