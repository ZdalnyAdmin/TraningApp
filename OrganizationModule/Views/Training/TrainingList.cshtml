<div>
    <div>
        <div class="btn" ng-click="changeDisplayedTrainings('All')">Wszystkie</div>
        <div class="btn" ng-click="changeDisplayedTrainings('Internal')">Wewnętrzne</div>
        <div class="btn" ng-click="changeDisplayedTrainings('Kenpro')">Od Kenpro</div>
    </div>

    @foreach (var training in ViewBag.Trainings)
    {
        <div class="training" ng-show="display == 'All' || ('@training.TrainingType' == display)">
            <div>@training.Name</div>
            <div>
                <img src="@training.TrainingResources" />
                <div class="description">@training.Description</div>
                <div><button class="details">Szczegóły</button><button class="hide-details">Ukryj szczegóły</button><button ng-click="startTraining(@training.TrainingID)">Uruchom</button></div>
            </div>
        </div>
    }
</div>
