<div ng-app="" ng-controller="createrTrainingsListController" class="container">

    @*<strong class="error">{{ viewModel.ErrorMessage }}</strong>
    <strong class="error">{{ viewModel.Success }}</strong>*@


    <div ng-repeat="item in viewModel.Trainings">
        <div>
            Tytul szkolenia {{ item.Name}}
        </div>
        <div>
            {{ item.UserName}}
        </div>
        <div>
            Data utworzenie :
            {{ item.CreateDate | date: 'dd.MM.yyyy HH.mm' }}
        </div>
        <div>
            Moga uruchomic :
            <div ng-repeat="grp in item.AssignedGroups">
                {{grp.Name}} ,
            </div>
            <div ng-show="item.IsForAll">
                Wszyscy
            </div>
        </div>
        <div>
            <input type="file"
                   id="idTrainingImageInput"
                   class="upload-input upload-image"
                   onchange="angular.element(this).scope().loadImage(this, angular.element(this).scope().item)"
                   name="uploadFiles">

            <div class='statusBar'><div></div></div>

            <div ng-show="!!imageMessage && imageMessage.length > 0">
                {{imageMessage}}
            </div>
        </div>

        <div>
            <img src="{{item.TrainingResources}}" height="250" width="250" />
        </div>

        <div>
            {{item.Description}}
        </div>

        <input type="button" value="Szczegoly" />

        <input type="button" value="Edytuj szkolenia" ng-click="edit(item)" />

    </div>
</div>
