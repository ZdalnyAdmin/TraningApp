<div class="login-container">
    <div class="login-message center" ng-show="errorMessage">{{errorMessage}}</div>
    <div class="form" ng-form="resetPasswordFrm">
        <div class="login-form-row"><label>Podaj aktualny login:</label><input type="text" ng-model="resetPasswordData.UserName" required /></div>
        <div class="login-form-row"><label>Podaj nowe hasło:</label><input type="password" ng-model="resetPasswordData.Password" required /></div>
        <div class="login-form-row"><label>Powtórz nowe hasło:</label><input type="password" ng-model="resetPasswordData.ConfirmPassword" required /></div>
        <div class="login-form-row center"><div class="btn" ng-click="confirmResetPassword()" ng-disabled="resetPasswordFrm.$invalid || resetPasswordData.Password !== resetPasswordData.ConfirmPassword">Zapisz nowe hasło</div></div>
    </div>
</div>