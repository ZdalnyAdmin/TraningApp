<div class="login-container">
    <div class="login-message center" ng-show="errorMessage">{{errorMessage}}</div>
    <div class="form" ng-form="resetFrm">
        <div class="login-form-row"><label>Login:</label><input type="text" ng-model="resetForm.UserName" required /></div>
        <div class="login-form-row"><label>Email:</label><input type="text" ng-model="resetForm.Email" required /></div>
        <div class="login-form-row center"><div class="btn" ng-disabled="resetFrm.$invalid" ng-click="resetPassword()">Resetuj hasło</div></div>
        <div class="login-form-row center hint">*Jeżeli niepamiętasz loginu skontaktuj się z administratorem w twojej firmie</div>
    </div>
</div>
