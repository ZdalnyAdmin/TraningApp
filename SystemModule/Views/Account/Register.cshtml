<div class="login-container">
    <div class="form" ng-form="registerFrm">
        <div class="login-form-row">{{ company.name }}</div>
        <div class="login-form-row">Twoja nazwa wyświetlania: {{ company.displayName }}</div>
        <div class="login-form-row">Adres e-mail: {{ registrationData.emailAddress }}</div>
        <div class="login-form-row">Rola: {{ registrationData.role }}</div>
        <div class="login-form-row"><label>Login:</label><input type="text" ng-model="registrationData.login" required /></div>
        <div class="login-form-row"><label>Hasło:</label><input type="password" ng-model="registrationData.password" required /></div>
        <div class="login-form-row"><label>Powtórz hasło:</label><input type="password" ng-model="registrationData.repeatedPassword" required /></div>
        <div class="login-form-row center"><div class="btn" ng-click="login()" ng-disabled="registerFrm.$invalid || registrationData.password !== registrationData.repeatedPassword">Utwórz konto</div></div>
    </div>
</div>